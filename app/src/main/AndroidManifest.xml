<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.rmss.parkhere">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashUI"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="Login" />
        <activity
            android:name=".AdminConsole"
            android:label="Admin Console"
            android:launchMode="singleTop" />
        <activity android:name=".StaffActivity" />
        <activity
            android:name=".RecruitStaff"
            android:label="Recruiting Staff"
            android:parentActivityName=".AdminConsole" />
        <activity android:name=".StaffConsole" />
        <activity android:name=".EmptySlotsActivity" />
        <activity android:name=".OccupiedSlotsActivity" />
        <activity android:name=".ManageSlots"></activity>
    </application>

</manifest>